# Librarian Bot Configuration
# Copy this file to .env and fill in your values

# ============================================================
# Discord Configuration
# ============================================================
DISCORD_TOKEN=your_discord_bot_token_here
ADMIN_ROLE=Admin

# ============================================================
# Prowlarr Configuration
# ============================================================
PROWLARR_URL=http://localhost:9696
PROWLARR_API_KEY=your_prowlarr_api_key_here
PROWLARR_TIMEOUT=30

# ============================================================
# qBittorrent Configuration
# ============================================================
QBIT_URL=http://localhost:8080
QBIT_USERNAME=admin
QBIT_PASSWORD=your_qbit_password_here
QBIT_DOWNLOAD_PATH=C:/Users/YourUser/Downloads
QBIT_TIMEOUT=30
QBIT_POLL_INTERVAL=5

# ============================================================
# Library Configuration
# ============================================================
LIBRARY_PATH=C:/Users/YourUser/Library
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here
DOWNLOAD_CATEGORY=librarian-bot

# ============================================================
# Path Mapping (for cross-server setup)
# ============================================================
# When library_organizer runs on different server than qBit:
# - qBit reports paths as seen on SEEDBOX (e.g., /mnt/downloads)
# - library_organizer runs on UNRAID and needs local paths
# Use these mappings to translate between servers

# Enable path mapping
ENABLE_PATH_MAPPING=false

# Server Mode: "local" (bot runs on same server as qBit)
#              "remote" (bot runs on different server than qBit)
#              "seedbox" (library_organizer runs on seedbox)
SERVER_MODE=local

# Seedbox Configuration (where qBit downloads files)
SEEDBOX_HOST=192.168.1.50
SEEDBOX_USER=admin
SEEDBOX_PASSWORD=seedbox_password
SEEDBOX_SSH_PORT=22
SEEDBOX_DOWNLOAD_PATH=/mnt/downloads

# Unraid Configuration (where bot and library_organizer run)
UNRAID_HOST=192.168.1.100
UNRAID_USER=root
UNRAID_PASSWORD=unraid_password
UNRAID_LIBRARY_PATH=/mnt/user/library

# Path Mapping Rules (seedbox path -> unraid path)
# Format: SEEDBOX_PATH|UNRAID_PATH
# Multiple mappings separated by semicolon
PATH_MAPPINGS=/mnt/downloads|/mnt/user/downloads;/mnt/media|/mnt/user/media

# ============================================================
# Bot Configuration
# ============================================================
COMMAND_PREFIX=!
MAX_RESULTS=5
REQUEST_TIMEOUT=300
APPROVAL_TIMEOUT=600
LOG_LEVEL=INFO
LOG_FILE=

# ============================================================
# Optional Settings
# ============================================================
ENVIRONMENT=development
ENABLE_HARDLINKS=true
AUTO_APPROVE_MIN_SEEDERS=0
