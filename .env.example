# Librarian Bot Configuration
# Copy this file to .env and fill in your values

# ============================================================
# Discord Configuration
# ============================================================
DISCORD_TOKEN=your_discord_bot_token_here
ADMIN_ROLE=Admin

# ============================================================
# Prowlarr Configuration
# ============================================================
PROWLARR_URL=http://localhost:9696
PROWLARR_API_KEY=your_prowlarr_api_key_here
PROWLARR_TIMEOUT=30

# ============================================================
# qBittorrent Configuration
# ============================================================
QBIT_URL=http://localhost:8080
QBIT_USERNAME=admin
QBIT_PASSWORD=your_qbit_password_here
QBIT_DOWNLOAD_PATH=C:/Users/YourUser/Downloads
QBIT_TIMEOUT=30
QBIT_POLL_INTERVAL=5

# ============================================================
# Library Configuration
# ============================================================
LIBRARY_PATH=C:/Users/YourUser/Library
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here
DOWNLOAD_CATEGORY=librarian-bot

# ============================================================
# Bot Configuration
# ============================================================
COMMAND_PREFIX=!
MAX_RESULTS=5
REQUEST_TIMEOUT=300
APPROVAL_TIMEOUT=600
LOG_LEVEL=INFO
LOG_FILE=

# ============================================================
# Optional Settings
# ============================================================
ENVIRONMENT=development
ENABLE_HARDLINKS=true
AUTO_APPROVE_MIN_SEEDERS=0
